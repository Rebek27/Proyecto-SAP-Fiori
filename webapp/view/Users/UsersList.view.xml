<mvc:View
    controllerName="com.invertions.sapfiorimodinv.controller.Users.UsersList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form"
>  
    <m:Page
        id="UsersListPage"
        title="Usuarios Registrados"
		class="sapUiContentPadding"
    >
   <m:List
        id="UsersList"
        headerText="Lista de usuarios"
        items="{users>/value}"
        mode="SingleSelectMaster"
        itemPress=".onListItemPressed"
    >
        <m:StandardListItem
            title="{users>USERNAME}"
            description="{users>DEPARTMENT}"
            type="Active"
        />
    </m:List>

    </m:Page>
</mvc:View>